{
  "steps": [
    {
      "id": "open_target",
      "action": "open",
      "target": "https://example.com"
    },
    {
      "id": "wait_ready",
      "action": "wait",
      "target": "networkidle",
      "optional": true
    }
  ],
  "branches": {
    "human_verify": {
      "enabled": true,
      "trigger": {
        "error_contains_any": ["captcha", "verification", "robot check", "qr required"],
        "snapshot_contains_any": ["captcha", "please verify", "complete verification"]
      },
      "steps": []
    }
  },
  "branch_policy": {
    "max_branches": 2,
    "on_step_error": "human_verify",
    "on_human_verify_error": "re_explore"
  }
}
